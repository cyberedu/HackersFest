@import "classes.styl"

ico_blanco = '../img/glyphicons-halflings-white.png'
ico_negro = '../img/glyphicons-halflings-black.png'



#suscritos
	.suscritos
		.tickercontainer	
			width 100%
			height 120px
			.mask
				width 100%
				height 120px
				padding 0
				top 0
				ul
					li
						position relative
						width 100px
						height 100px
						transform skew(-12deg)
						background #107096
						border-right 29px solid rgb(223, 230, 61)
						border-left 13px solid rgb(0, 48, 75)
						.comentario
							display none
							&.over
								display block
								background red
								height 100px
								width 300px
								position absolute
								left 130px
								padding 5px
								box-sizing border-box
								border-right 10px solid rgb(18, 132, 255)
						&:hover
							.comentario
								display block
								background red
								height 100px
								width 300px
								position absolute
								left 130px
								padding 5px
								box-sizing border-box
								border-right 10px solid rgb(18, 132, 255)
								z-index 10


