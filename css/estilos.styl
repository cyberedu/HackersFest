/* Colores Basicos */

color_titulo = #2c3e50
color_texto = #4e4e4e

header
	nav
		background-color color_titulo
		color color_texto
		ul
			margin 0 auto
			padding 0
			list-style none
			overflow auto
			text-align center
			li 
				display inline-block
				font-family Open Sans
				margin-right 15px
				padding 15px 10px
				transition .2s background
				@media screen and (max-width: 1000px)
					margin-right 0
				@media screen and (max-width: 480px)
					display block
					text-align center
					margin-right 0
				&:hover
					background #1e2934
					text-decoration underline
				a
					color white
					display block
					text-decoration none

section#formulario
	background-color color_titulo
	display none
	padding-top 30px
	padding-bottom 10px
	color white
	text-align center
	form
		h4
			font-family Open Sans
			font-size 16px
			font-weight 600
		textarea
			display block
			margin 0 auto
			outline: none;
			padding 10px 
			transition height 0.2s
			width 380px
			&:hover
				border 1px solid orange;
			@media screen and (max-width: 480px)
				width 90%
		input[type="submit"]
			border 0
			background-color #2ecc71
			border-radius 5px 
			border-bottom 7px solid #2bb565
			color white
			display block
			font-family Open Sans
			font-size 16px
			font-weight 400
			margin 0 auto
			margin-top 10px
			padding 10px 0 10px 0
			outline none
			text-transform uppercase
			width 406px
			@media screen and (max-width: 480px)
				width 95%

section#presentacion
	background-color black
	color white
	text-align center
	background-image url('../img/equipo.jpg')
	background-position center center
	background-repeat no-repeat
	height 362px
	h1
		display inline-block
		margin 0 auto
		font-family Open Sans
		font-weight 600
		font-size 50px
		padding 80px 0 0 0
	p
		background-color rgba(0,0,0,0.3)
		font-size 18px
		font-family Open Sans
		margin 0 auto
		padding 10px 15px 10px 15px
		position relative
		text-align center
		width 70%
		@media screen and (max-width: 900px)
			padding 0
			width 100%
		@media screen and (max-width: 480px)
			padding 0
			width 100%
	a
		background-color #0066cc
		border-radius 7px
		border-bottom 7px solid #0958a8
		color white
		display inline-block
		padding 15px 30px 15px 30px
		position relative
		top 70px
		text-transform uppercase
		transition .2s background
		@media screen and (max-width: 480px)
			top 0px
		&:hover
			background-color #0b5fb3
section#tecnologias
	background-color white
	text-align center
	font-family Open Sans
	padding-top 30px
	@media screen and (max-width: 480px)
		padding-top 110px
	div.tecnologias
		figure
			display inline-block
			margin 0 30px
			transition .2s
			&:hover
				-webkit-transform scale(0.8,0.8)

section#titulo_hackers
	background-color #e8f7f4
	border-bottom 1px solid #d0dfdc
	border-top 1px solid #d0dfdc
	text-align center
	h2
		color color_titulo
		font-weight 600
		font-size 34px
		font-family Open Sans
		text-align center
		text-transform uppercase
		width 100%

section#hackers
	padding 70px 0 0 0
	text-align center
	div.expositor
		display inline-block
		width 30% 
		vertical-align top
		margin-bottom 20px
		@media screen and (max-width: 480px)
			width 100%
		figure
			@media screen and (max-width: 900px)
				width 100%
			@media screen and (max-width: 480px)
				width 100%
			img
				
				&:hover
					background-color red
		h3
			margin 0
		a
			color #259ee4
			font-size 16px
			font-family Open Sans
			text-decoration none 
		p
			color #4e4e4e 
			font-size 14px
			font-family Open Sans

section.parte
	background-image url('../img/hoffman.png')
	margin-bottom 30px
	div.trata
		padding 20px 0 20px 0
		width 100%
		background-image url('../img/trata.png')
		background-repeat no-repeat
		background-position right bottom
		h2
			color color_titulo
			font-family Open Sans
			font-size 32px
			font-weight 600
		p
			color color_texto
			font-family Open Sans
			font-size 18px
			font-weight 400
			line-height 30px
			width 50%
	div.puedo
		padding 20px 0 20px 0
		width 100%
		background-image url('../img/puedo.png')
		background-repeat no-repeat
		background-position 100px 10px
		text-align right
		overflow hidden
		h2
			color color_titulo
			font-family Open Sans
			font-size 32px
			font-weight 600
			text-align right
		p
			color color_texto
			float right
			font-family Open Sans
			font-size 18px
			font-weight 400
			line-height 30px
			width 50%
			a
				color green
				text-decoration underline

	div.lugar
		padding 20px 0 20px 0
		width 100%
		background-image url('../img/lugar.png')
		background-repeat no-repeat
		background-position right center
		text-align left
		overflow hidden
		h2
			color color_titulo
			font-family Open Sans
			font-size 32px
			font-weight 600
			text-align left
		p
			color color_texto
			float left
			font-family Open Sans
			font-size 18px
			font-weight 400
			line-height 30px
			max-width 50%

footer
	background-color #272727
	padding 20px 0
	p 
		color #767676
		margin 0
		font-family Open Sans
		font-weight 400
		font-size 14px
		text-align center

div.rayitas
	border-top 1px dashed color_texto
	margin-bottom 30px

.wrapper
	width 1000px
	margin 0 auto
	@media screen and (max-width: 900px)
		width 90%
	@media screen and (max-width: 480px)
		width 100%
.wrapper2
	width 1000px
	margin 0 auto
	@media screen and (max-width: 900px)
		width 90%
	@media screen and (max-width: 480px)
		width 100%